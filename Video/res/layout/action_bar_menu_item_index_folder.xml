<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:attr/actionButtonStyle"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="48dip"
    android:paddingLeft="4dip"
    android:paddingRight="4dip"
    android:focusable="true"
    android:background="@drawable/list_selector_holo_dark"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_menu_video_index"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        style="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu"
        android:text="@string/add_to_indexed_folders" />
        
    <!-- A vertical separator is needed when an action bar item has a text -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginLeft="10dip"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/list_divider_holo_dark" />

</LinearLayout>    
