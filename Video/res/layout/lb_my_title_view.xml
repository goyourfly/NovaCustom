<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/title_badge"
        style="?attr/browseTitleIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/lb_browse_title_icon_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/lb_browse_title_icon_max_width"
        app:srcCompat="@null"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_text"
        style="?attr/browseTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/title_orb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|start"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="28dip"
        android:transitionGroup="true"
        android:visibility="visible" />

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/title_orb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|start"
        android:layout_toEndOf="@id/title_orb"
        android:layout_marginEnd="28dip"
        android:transitionGroup="true"
        android:visibility="visible" />

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/title_orb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|start"
        android:layout_toEndOf="@id/title_orb2"
        android:layout_marginEnd="28dip"
        android:transitionGroup="true"
        android:visibility="visible" />
    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/title_orb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|start"
        android:layout_toEndOf="@id/title_orb3"
        android:layout_marginEnd="28dip"
        android:transitionGroup="true"
        android:visibility="visible" />

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/title_orb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|start"
        android:layout_toEndOf="@id/title_orb4"
        android:transitionGroup="true"
        android:visibility="visible" />

    <com.archos.mediacenter.video.leanback.widget.HintView
        android:id="@+id/hint_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|start"
        android:layout_toEndOf="@id/title_orb3"
        android:layout_marginStart="16dip"
        android:visibility="gone" />

    <!-- HINT: using translationY to put it under the Orb to avoid enlarging the parent viewgroup ;-) -->
    <TextView
        android:id="@+id/orb1_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_orb"
        android:layout_alignEnd="@+id/title_orb"
        android:layout_alignStart="@+id/title_orb"
        android:layout_marginEnd="-64dip"
        android:layout_marginStart="-64dip"
        android:layout_marginTop="0dip"
        android:alpha="0"
        android:textColor="@color/leanback_discreet_text_over_background"
        android:singleLine="true"
        android:gravity="center"
        android:translationY="32dip"/>

    <!-- HINT: using translationY to put it under the Orb to avoid enlarging the parent viewgroup ;-) -->
    <TextView
        android:id="@+id/orb2_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_orb2"
        android:layout_alignEnd="@+id/title_orb2"
        android:layout_alignStart="@+id/title_orb2"
        android:layout_marginEnd="-64dip"
        android:layout_marginStart="-64dip"
        android:layout_marginTop="0dip"
        android:alpha="0"
        android:textColor="@color/leanback_discreet_text_over_background"
        android:singleLine="true"
        android:gravity="center"
        android:translationY="32dip"/>

    <!-- HINT: using translationY to put it under the Orb to avoid enlarging the parent viewgroup ;-) -->
    <TextView
        android:id="@+id/orb3_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_orb3"
        android:layout_alignEnd="@+id/title_orb3"
        android:layout_alignStart="@+id/title_orb3"
        android:layout_marginEnd="-64dip"
        android:layout_marginStart="-64dip"
        android:layout_marginTop="0dip"
        android:alpha="0"
        android:textColor="@color/leanback_discreet_text_over_background"
        android:singleLine="true"
        android:gravity="center"
        android:translationY="32dip"/>

    <TextView
        android:id="@+id/orb4_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_orb4"
        android:layout_alignEnd="@+id/title_orb4"
        android:layout_alignStart="@+id/title_orb4"
        android:layout_marginEnd="-64dip"
        android:layout_marginStart="-64dip"
        android:layout_marginTop="0dip"
        android:alpha="0"
        android:textColor="@color/leanback_discreet_text_over_background"
        android:singleLine="true"
        android:gravity="center"
        android:translationY="32dip"/>

    <TextView
        android:id="@+id/orb5_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_orb5"
        android:layout_alignEnd="@+id/title_orb5"
        android:layout_alignStart="@+id/title_orb5s"
        android:layout_marginEnd="-64dip"
        android:layout_marginStart="-64dip"
        android:layout_marginTop="0dip"
        android:alpha="0"
        android:textColor="@color/leanback_discreet_text_over_background"
        android:singleLine="true"
        android:gravity="center"
        android:translationY="32dip"/>

</merge>
