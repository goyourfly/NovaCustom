<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">



    <!-- Video info -->
    <TableRow
        android:id="@+id/video_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginTop="0dip"
            app:srcCompat="@drawable/leanback_info_video"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/video_track"
                style="@style/VideoInfoFileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/video_decoder"
                style="@style/VideoInfoFileInfo.Smaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"/>
        </LinearLayout>
    </TableRow>


    <!-- Audio tracks info -->
    <TableRow
        android:id="@+id/audio_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginTop="0dip"
            app:srcCompat="@drawable/leanback_info_audio"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/audio_track"
                style="@style/VideoInfoFileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </TableRow>


    </LinearLayout>
