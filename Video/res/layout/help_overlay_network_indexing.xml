<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HelpOverlayTextAppearance"
        android:text="@string/help_overlay_network_indexing_text1" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        style="@style/HelpOverlayTextAppearance"
        android:text="@string/help_overlay_network_indexing_text2" />

</LinearLayout>    
