<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dip">
    <com.archos.mediacenter.video.player.SubtitleDelayPicker
        android:id="@+id/subtitleDelayPicker"
        android:padding="5dip"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- simple listDivider, should be using current Theme -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        app:srcCompat="?android:attr/listDivider" />
    <TextView
        android:text="@string/subtitle_delay_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
    <Spinner
        android:id="@+id/subtitle_delay_ratio_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/subtitle_delay_speed" />
</LinearLayout>