    <script>
    var listLang =["en","fr"];
    ;

    function getParameterByName(name, url) {
      if (!url) {
        url = window.location.href;
      }
      name = name.replace(/[\[\]]/g, "\\$&");
      var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
      results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return null;
      return decodeURIComponent(results[2].replace(/\+/g, " "));
    }
    var selectedLang = getParameterByName("lang");
    var userLang = navigator.language || navigator.userLanguage;
    if(userLang=="fr-FR")
    userLang="fr";
    if(selectedLang==null)
    selectedLang=userLang;
    var isLangAvailable = false;
    for(var i = 0; i< listLang.length; i ++ ){
      if(selectedLang==listLang[i]){
        isLangAvailable = true;
        break;
      }
    }
    if(!isLangAvailable){
      selectedLang = "en";
    }
    document.getElementById("lang-bar").innerHTML="";
    for(var l = 0; l< listLang.length; l ++ ){
      var lang = listLang[l];
      if(lang!=selectedLang){
        document.getElementById("lang-bar").innerHTML+="<a href=\"index.html?lang="+lang+"\"><img  class=\"flag\" src=\"./"+lang+".png\"/></a>";
        document.getElementById("lang-container-"+lang).style.display = "none";
        document.getElementById("caption-"+lang).style.display = "none";
      }
      else{
        document.getElementById("lang-container-"+lang).style.display = "inline-block";
        document.getElementById("caption-"+lang).style.display = "inline";
      }
    }


  </script>



